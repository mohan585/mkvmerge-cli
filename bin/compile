#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install mkvmerge"
BUILD_DIR=$2
VENDOR_DIR="vendor1"
FILE="mkvmerge-0.7.1"
DOWNLOAD_URL="https://raw.githubusercontent.com/mohan585/mkvmerge-cli/master/$FILE.zip"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p mkvcli
cd mkvcli
wget -q $DOWNLOAD_URL
unzip -qq $FILE.zip
mv $FILE/bin .

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/mkvmerge.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor1/mkvcli/bin"' >> $PROFILE_PATH
